@model PPOK_System.Models.Person

@{
    ViewBag.Title = "Index";
    List<PPOK_System.Models.Prescription> prescription = new List<PPOK_System.Models.Prescription>();
    List<PPOK_System.Models.Person> person = new List<PPOK_System.Models.Person>();
    PPOK_System.Service.Database db = new PPOK_System.Service.Database();
    DateTime today = DateTime.UtcNow.Date;
    String mmddyy = today.ToString("MM/dd/yy");

    person = db.ReadAllPersons();

}

@section additionalCSS {
    <style>
        body {
            margin-top: 2%;
        }

        center {
            margin: auto;
        }
    </style>
}


<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>

<div class="row">
    <div class="form-group">
        <label class="col-md-3 control-label" for="searchInput"></label>
        <div>
            <form id="import-form" action="/Import" method="post" enctype="multipart/form-data">
                <div class="form-group col-xs-6">
                    <label for="file">Import Patient Data:</label>
                </div>
                <div class="form-group col-xs-6">
                    <div class="form-group col-xs-6" align="center">
                        <input type="file" name="file" id="file" accept=".csv" />
                    </div>
                    <div class="form-group col-xs-6" align="left">
                        <input id="import-submit" type="submit" />
                    </div>
                </div> 
</form>
        </div>
    </div>
</div>
<div id="import-container" class="modal fade hidden-print" role="dialog"></div>
<div></div>
<div class="container" style='margin-top:75px'>
    <div class="row">


        <div class="col-md-12">
            <h4>Pending Refills</h4>
            <div class="table-responsive">

                <table id="mytable" class="table table-bordred table-striped">

                    <thead>

                        <th>Name</th>
                        <th>Prescription</th>
                        <th> </th>

                    </thead>
                    <tbody>

                        @{
                            foreach (PPOK_System.Models.Person p in person)
                            {
                                prescription = db.ReadAllPrescriptionsForPerson(p.person_id);
                                foreach (PPOK_System.Models.Prescription pr in prescription)
                                {
                                    <tr>
                                        <td>@p.first_name @p.last_name</td>
                                        <td>@pr.drug.drug_name</td>
                                        <td><p data-placement="left" data-toggle="tooltip"><button class="btn btn-primary" data-title="Edit" data-toggle="modal" data-target="#edit">Filled</button></p></td>
                                    </tr>
                                }

                            }
                        }

                    </tbody>

                </table>
            </div>

        </div>
    </div>
</div>



@section inlineScript {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#mytable #checkall").click(function () {
                if ($("#mytable #checkall").is(':checked')) {
                    $("#mytable input[type=checkbox]").each(function () {
                        $(this).prop("checked", true);
                    });

                } else {
                    $("#mytable input[type=checkbox]").each(function () {
                        $(this).prop("checked", false);
                    });
                }
            });

            $("[data-toggle=tooltip]").tooltip();
        });
    </script>
}


@section scriptsIncludes {
    <script type="text/javascript" src="~/Content/Modules/ImportModule.js"></script>
}
